{
    "name": "immer-yjs",
    "license": "MIT",
    "description": "Combine immer & y.js",
    "version": "1.1.0",
    "Author": "LCZ",
    "repository": {
        "type": "git",
        "url": "https://github.com/sep2/immer-yjs.git"
    },
    "main": "./dist/immer-yjs.umd.js",
    "module": "./dist/immer-yjs.es.js",
    "types": "./dist/index.d.js",
    "exports": {
        ".": {
            "import": "./dist/immer-yjs.es.js",
            "require": "./dist/immer-yjs.umd.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && vite build",
        "test": "NODE_NO_WARNINGS=1 vitest",
        "coverage": "vitest run --coverage",
        "release": "standard-version",
        "check:types": "tsc --noEmit --pretty --verbose"
    },
    "peerDependencies": {
        "immer": "^9.0.12",
        "yjs": "^13.5.35"
    },
    "devDependencies": {
        "immer": "^9.0.12",
        "standard-version": "^9.3.2",
        "typescript": "^4.6.3",
        "vite": "^2.9.6",
        "vite-plugin-dts": "^3.9.1",
        "vitest": "^0.10.0",
        "yjs": "^13.5.35"
    },
    "packageManager": "yarn@3.2.0",
    "keywords": [
        "immer",
        "yjs",
        "crdt"
    ]
}
